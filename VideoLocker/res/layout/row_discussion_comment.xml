<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_discussion_comment_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/discussion_responses_box_padding"
    android:paddingLeft="@dimen/discussion_responses_box_padding"
    android:paddingRight="@dimen/discussion_responses_box_padding"
    android:paddingStart="@dimen/discussion_responses_box_padding"
    android:paddingTop="@dimen/discussion_responses_box_padding"
    android:paddingBottom="@dimen/discussion_responses_box_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include layout="@layout/discussion_user_profile_row" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/discussion_comment_count_report_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:padding="@dimen/discussion_responses_box_padding"
            android:textColor="@color/edx_grayscale_neutral_base"
            android:textSize="@dimen/edx_xxx_small"
            tools:text="@string/discussion_responses_report_label" />

    </LinearLayout>

    <TextView
        android:id="@+id/discussion_comment_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/edx_grayscale_neutral_dark"
        android:textSize="@dimen/edx_x_small"
        tools:text="This is the text of a comment. This is the text of a comment. This is the text of a comment. This is the text of a comment. This is the text of a comment." />


</LinearLayout>
